<Window x:Class="BoxArrangementSystemFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BoxArrangementSystemFinal.Views">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/BoxArrangementSystemBackground.jpg" Stretch="Fill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <views:TextBoxBuyer/>
        <views:BuyerButton Grid.Row="1"/>

        <views:MainListView Grid.Column="1"/>

        <views:SupplyButton Grid.Row="1" Grid.Column="2"/>
        <views:TextBoxSupplier Grid.Column="2"/>
        
        <views:TimeCheckView Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
